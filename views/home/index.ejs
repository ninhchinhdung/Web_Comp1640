<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('../partials/header') %>

        <main class="container">
            <section class="hero">
                <h1>Welcome to Express MVC</h1>
                <p>A modern, scalable web application built with Express.js and MongoDB</p>
                <div class="hero-buttons">
                    <a href="/products" class="btn btn-primary">Browse Products</a>
                    <a href="/users" class="btn btn-secondary">View Users</a>
                </div>
            </section>

            <section class="stats">
                <div class="stat-card">
                    <h3>
                        <%= stats.totalProducts %>
                    </h3>
                    <p>Total Products</p>
                </div>
                <div class="stat-card">
                    <h3>
                        <%= stats.totalUsers %>
                    </h3>
                    <p>Total Users</p>
                </div>
            </section>

            <% if (featuredProducts && featuredProducts.length> 0) { %>
                <section class="featured-products">
                    <h2>Featured Products</h2>
                    <div class="product-grid">
                        <% featuredProducts.forEach(product=> { %>
                            <div class="product-card">
                                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                <h3>
                                    <%= product.name %>
                                </h3>
                                <p class="price">$<%= product.price.toFixed(2) %>
                                </p>
                                <p class="category">
                                    <%= product.category %>
                                </p>
                                <a href="/products/<%= product._id %>" class="btn btn-small">View Details</a>
                            </div>
                            <% }); %>
                    </div>
                </section>
                <% } %>
        </main>

        <%- include('../partials/footer') %>

            <script src="/js/main.js"></script>
</body>

</html>