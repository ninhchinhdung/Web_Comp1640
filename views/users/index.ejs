<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - Express MVC
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar">
        <div class="container">
            <a href="/" class="logo">Express MVC</a>
            <ul class="nav-links">
                <li><a href="/">Trang Chủ</a></li>
                <li><a href="/users">Người Dùng</a></li>
            </ul>
        </div>
    </nav>

    <main class="container">
        <h1>
            <%= title %>
        </h1>
        <div class="actions">
            <a href="/users/create" class="btn btn-primary">Tạo Người Dùng Mới</a>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Vai Trò</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td><span class="badge <%= user.role === 'Admin' ? 'badge-admin' : 'badge-user' %>">
                                    <%= user.role %>
                                </span></td>
                            <td class="actions-cell">
                                <a href="/users/<%= user.id %>" class="btn btn-sm btn-info">Xem</a>
                                <a href="/users/<%= user.id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                                <form action="/users/<%= user.id %>/delete" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2026 Express MVC Project. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>

</html>